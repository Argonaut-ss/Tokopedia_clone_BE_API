          },
          "message": {
            "type": "string",
            "example": "Success Get All Videos"
          },
          "data": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string",
                  "example": "asodiuhjas890u123"
                },
                "title": {
                  "type": "string",
                  "example": "Diskon Peripheral Gaming"
                },
                "thumbnail": {
                  "type": "string",
                  "example": "https://localhost:3000/images/diskon-peripheral-gaming.jpg"
                }
              }
            }
          }
        }
      },
      "Product": {
