{
  "openapi": "3.0.0",
  "info": {
    "description": "API Documentation for Tokopedia Play Clone API\n\nSome useful link :\n - [Github](https://github.com/Argonaut-ss)\n - [Tokopedia Play Clone Repository](https://github.com/Argonaut-ss/Tokopedia_play_clone_BE_API) ",
    "version": "1.0.0",
    "title": "Tokopedia Play Clone API",
    "contact": {
      "email": "samysyafta@gmail.com"
    }
  },

  "servers": [
    {
      "url": "https://localhost/docs/api"
    }
  ],
  "tags": [
    {
      "name": "Videos",
      "description": "Everything about videos"
    },
    {
      "name": "Product",
      "description": "Everything about product"
    },
    {
      "name": "Comment",
      "description": "Everything about comment"
    }
  ],
  "paths": {
    "/videos": {
      "get": {
        "tags": ["Videos"],
        "summary": "Return List of Video",
        "responses": {
          "200": {
            "description": "Success get all videos",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Videos"
                }
              }
            }
          },
          "404": {
            "description": "Video Not Found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorNotFound"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/InternalServerError"
                }
              }
            }
          }
        }
      }
    },
    "/product/{videoId}": {
      "get": {
        "tags": ["Product"],
        "summary": "Return List of product",
        "parameters": [
          {
            "name": "videoId",
            "in": "path",
            "description": "ID of video to return",
            "required": true,
            "schema": {
              "type": "string",
              "example": "asodiuhjas890u123"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success get all product",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Product"
                }
              }
            }
          },
          "404": {
            "description": "product Not Found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorNotFound"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/InternalServerError"
                }
              }
            }
          }
        }
      }
    },
    "/comment/{videoId}": {
      "get": {
        "tags": ["Comment"],
        "summary": "Return List of comment",
        "parameters": [
          {
            "name": "videoId",
            "in": "path",
            "description": "ID of video to return",
            "required": true,
            "schema": {
              "type": "string",
              "example": "asodiuhjas890u123"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success get all comment",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Comment"
                }
              }
            }
          },
          "404": {
            "description": "comment Not Found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorNotFound"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/InternalServerError"
                }
              }
            }
          }
        }
      }
    },
    "/addComment/{videoId}": {
      "post": {
        "tags": ["Comment"],
        "summary": "Add new Comment",
        "parameters": [
          {
            "name": "videoId",
            "in": "path",
            "description": "ID of video to return",
            "required": true,
            "schema": {
              "type": "string",
              "example": "asodiuhjas890u123"
            }
          },
          {
            "name": "username",
            "in": "query",
            "description": "Name Of User",
            "required": true,
            "schema": {
              "type": "string",
              "example": "samy"
            }
          },
          {
            "name": "message",
            "in": "query",
            "description": "Comment Message",
            "required": true,
            "schema": {
              "type": "string",
              "example": "bagus banget"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Comment"
                }
              }
            }
          },
          "422": {
            "description": "Fail",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UnprocessableEntity"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/InternalServerError"
                }
              }
            }
          }
        }
      }
    }
  },
  

  "components": {
