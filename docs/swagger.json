          },
          "data": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "video-id": {
                  "type": "string",
                  "example": "asodiuhjas890u123"
                },
                "id": {
                  "type": "string",
                  "example": "asodiuhjas890u123"
                },
                "username": {
                  "type": "string",
                  "example": "samy"
                },
                "comment": {
                  "type": "string",
                  "example": "bagus banget"
                },
                "timestamp": {
